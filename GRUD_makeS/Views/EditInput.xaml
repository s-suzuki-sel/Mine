<Window x:Class="GRUD_makeS.Views.EditInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GRUD_makeS"
        mc:Ignorable="d"
        Title="EditInput" Width="300" Height="220">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock>Name:</TextBlock>
            <TextBox x:Name="SNameIn" ></TextBox>
            <TextBlock>Category:</TextBlock>
            <TextBox x:Name="SCateIn"></TextBox>
            <TextBlock>Price:</TextBlock>
            <TextBox x:Name="SPriceIn"></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button x:Name="OK" Width="50" Height = "20"  Margin="10" Click="OK_Click">OK</Button>
            <Button x:Name="Cancel" Width="50" Height = "20" Click="Cancel_Click" >Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
