<Window x:Class="GRUD_makeS.Views.Search"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GRUD_makeS.Views"
        mc:Ignorable="d"
        Title="Search" Height="200" Width="200">
    <Grid>
        <StackPanel Margin="10">
            <Label Height="10"></Label>
            <ComboBox Width="100" Height="25" ItemsSource="{Binding CombBoxItems,Mode=OneTime}" SelectedIndex="{Binding Genre,Mode=OneWay}" ></ComboBox>
            <TextBlock Text="検索ワード" Width="100" Height="20" ></TextBlock>
            <TextBox Width="100" Height="25" DataContext="{Binding SearchWord,Mode=OneWay}"></TextBox>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Width="50" Height = "20"  Margin="10" Command="{Binding OkCommand,Mode=OneTime}" >OK</Button>
                <Button  Width="50" Height = "20" Command="{Binding CancelCommand,Mode=OneTime}" >Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
